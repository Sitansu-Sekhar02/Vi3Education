<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp"
    android:background="@color/grey_300">
    <LinearLayout
        android:id="@+id/lnrMain_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/course_image"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/ic_privacy_policy"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_subName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vedic Math"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/tv_Price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="550"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/rating"
                    android:layout_marginTop="@dimen/_5sdp"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="(20 Review)"/>

            </LinearLayout>
            <Button
                android:id="@+id/btn_Buy"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_60sdp"
                android:background="@drawable/view_border"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Course added"
                android:id="@+id/rlOutofstock"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/rectangle_cart"/>

        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/rectangle_cart">
            <TextView
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product added"
                android:textSize="@dimen/_10sdp"
                android:gravity="center_horizontal" />
        </RelativeLayout>



    </LinearLayout>
    <View
        android:layout_below="@id/lnrMain_course"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/green_600"/>

</RelativeLayout>