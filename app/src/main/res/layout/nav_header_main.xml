<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:id="@+id/llHeader"
    android:background="#07294d"
    android:orientation="vertical"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/rlHome"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/ivHome"
            android:layout_gravity="start"
            app:srcCompat="@drawable/vi3_logo"/>

        <TextView
            android:id="@+id/tvHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_minus6sdp"
            android:layout_toRightOf="@+id/ivHome"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:visibility="gone"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/NavuserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:text="Sitansu Sekhar "
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/NavuserContact"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:text="sitansu@gmail.com"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"/>
    </LinearLayout>

</LinearLayout>
