<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:background="@color/grey_100"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:weightSum="3">

            <com.vi3.vi3education.customecomponent.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="1"
                android:text="LOGIN"
                android:textColor="@color/grey_800"
                android:textSize="@dimen/_10sdp"
                app:font_name="NunitoRegular.ttf" />

            <com.vi3.vi3education.customecomponent.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PAYMENT"
                android:textColor="@color/grey_800"
                android:textSize="@dimen/_10sdp"
                app:font_name="NunitoRegular.ttf" />

            <com.vi3.vi3education.customecomponent.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="COMPLETE"
                android:textColor="@color/grey_800"
                android:textSize="@dimen/_10sdp"
                app:font_name="NunitoRegular.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.vi3.vi3education.customecomponent.CustomTextView
        android:text="Thank you for shopping with us. "
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:font_name="NunitoExtraBold.ttf"
        android:textColor="#111111"
        android:gravity="left"
        android:textSize="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.vi3.vi3education.customecomponent.CustomTextView
        android:text="Please check your email for order confirmation and detailed delivery information."
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:font_name="NunitoSemiBold.ttf"
        android:textColor="#3B3B3B"
        android:gravity="left"
        android:textSize="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white_off"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:text="Order Number:"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />
                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="498585"
                        android:id="@+id/tvOrderNumber"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="Purchase Date:"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />
                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDate"
                        android:layout_weight="1"
                        android:text="22-Aug-2020, 02:39PM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="Email:"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />
                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvEmail"
                        android:text="sitansu@gmail.com"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="Order Total:"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />
                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvOrderTotal"
                        android:text="2300"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="Payment Method:"
                        android:textColor="@color/grey_900"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />
                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="COD"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.vi3.vi3education.customecomponent.CustomTextView
        android:id="@+id/tvViewOrder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_below="@+id/tvForgotPassword"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_88sdp"
        android:layout_marginRight="@dimen/_35sdp"
        android:background="@drawable/capsule"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="@dimen/_20sdp"
        android:gravity="center"
        android:text="VIEW COURSE"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</LinearLayout>