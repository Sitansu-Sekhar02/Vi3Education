                            android:layout_height="@dimen/_9sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/circle_grey"
                            app:tint="@color/grey_600" />


                    </LinearLayout>


                </LinearLayout>

                <com.vi3.vi3education.customecomponent.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Your Delivery Address"
                    android:textColor="@color/black_trans"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="NunitoSemiBold.ttf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_50"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_17sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/ic_baseline_add_comment_24" />

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="Your Details"
                            android:id="@+id/tvName"
                            android:textColor="#333333"
                            app:font_name="NunitoRegular.ttf" />

                    </LinearLayout>



                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:maxLines="2"
                        android:text="Name :"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />

                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:text="Sitansu Sekhar"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:maxLines="2"
                        android:text="Email :"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />

                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="Flat 18,Rachna Garden Estate,Jagdish Nagar,Aundh -411007"
                        android:id="@+id/tvPhoneNumber"
                        android:textColor="@color/grey_700"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:textSize="@dimen/_10sdp"
                        app:font_name="NunitoRegular.ttf"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:text="Selected Delivery Slot"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tvTimeslot"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_10sdp"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">


                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:text="CART ITEM"
                        android:id="@+id/tvCartItemCount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoSemiBold.ttf" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_width_small"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@color/grey_light" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:scrollbars="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@color/white">
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.vi3.vi3education.customecomponent.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:text="PRICE DETAILS"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/_10sdp"
                        app:font_name="NunitoRegular.ttf" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_width_small"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/grey_light" />
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/rr1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v1">

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Price"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:id="@+id/tvItemCount"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/textView12"
                            android:gravity="center_vertical"
                            android:text="(1 Item)"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/tvItemCount"
                            android:gravity="center_vertical"
                            android:text="View"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="\u20b9 40"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@+id/textView12"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:visibility="gone" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/rr1">

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Delivery"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="FREE"
                            android:id="@+id/tvDelCharges"
                            android:textColor="@color/green_600"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                    </RelativeLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_width_small"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/grey_light" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/rrCoupon"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/rr1">

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Coupon Applied"
                            android:background="@color/white"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/_10sdp"
                            android:text=" "
                            android:id="@+id/tvCouponAmt"
                            android:textColor="@color/red_900"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoRegular.ttf" />

                    </RelativeLayout>
                    <View
                        android:visibility="gone"
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_width_small"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/grey_light" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp">

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Amount Payable"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoBold.ttf" />

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="\u20b9"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            app:font_name="NunitoBold.ttf" />
                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/_10sdp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            app:font_name="NunitoBold.ttf" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp">

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="GST Included."
                            android:textColor="@color/green_700"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="NunitoBold.ttf" />

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="\u20b9"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            app:font_name="NunitoBold.ttf" />
                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:id="@+id/tvGST"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/_10sdp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            app:font_name="NunitoBold.ttf" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_width_small"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/grey_light" />
                    <RelativeLayout
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:hint="enter coupon"
                            android:gravity="center"
                            android:inputType="text"
                            android:imeOptions="actionDone"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/edit_text_border"
                            android:id="@+id/EtApplyCoupon" />

                        <com.vi3.vi3education.customecomponent.CustomTextView
                            android:id="@+id/tvApply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/EtApplyCoupon"
                            android:text="Apply Coupon"
                            android:textColor="@color/red_800"
                            android:textSize="@dimen/_14sdp"
                            app:font_name="NunitoBold.ttf" />

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@color/white"></LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/black"
        android:elevation="30dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <com.vi3.vi3education.customecomponent.CustomTextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="Pay \u20B9 "
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:font_name="NunitoRegular.ttf" />
        <com.vi3.vi3education.customecomponent.CustomTextView
            android:id="@+id/tvCheckoutprice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:font_name="NunitoRegular.ttf" />

        <TextView
            android:id="@+id/tvProceed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E45528"
            android:gravity="center"
            android:text="CONTINUE"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>